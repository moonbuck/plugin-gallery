{
    "version": "1.0.0",
    "title": "Moondeer's Gallery",
    "description": "Leverages plugin-lightbox to create a a gallery page.",
    "includes": [
      "/assets/css/gallery.css"
    ],
    "fields": [
        {
            "field": "params.gallery_data_json",
            "label": "Gallery Data (JSON)",
            "placeholder": "[{\"title\": \"Slide Title\", \"src\": \"https://path/to/slide/content.ext\"}]."
        },
        {
            "field": "params.gallery_name",
            "label": "Gallery Name (glightbox-data-gallery)",
            "placeholder": "photo"
        },
        {
          "field": "params.gallery_photo_width",
          "label": "Photo Width (https://micro.blog/photos/[PHOTO_WIDTH]x)",
          "placeholder": 500
        }
    ]
  }